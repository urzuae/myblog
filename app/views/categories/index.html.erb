<% title 'Categories' %>

<% @categories.each do |category| %>
	<%= link_to h(category.name), category_path(category) %>
		<small><p>
			<% if logged_in? %>
			    <%= link_to 'Edit', edit_category_path(category) %>
			    <%= link_to 'Destroy', category, :confirm => 'Are you sure?', :method => :delete %>
			<% end %>
		</p></small>

<% end %>

<br />

<%= link_to 'New category', new_category_path if logged_in? %>
