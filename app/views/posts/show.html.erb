<% div_for @post do %>
	<% title h(@post.title) %>
	<%= render @post %>
<% end %>

<h2>Comments</h2>

  <div id='comments' >
  	<%= render @comments %>
  </div>

<a id="comments"></a>
<% #remote_form_for :comment, @comment, :url => post_comments_path(@post) do |f|  %>
<% remote_form_for [@post, @comment] do |f| %>
<% #form_for @comment, :url => post_comments_path(@post) do |f| %>
  <p>
		<%= f.label :author, 'Name' %>:<br />
		<%= f.text_field :author %>
  </p>
  <p>
		<%= f.label :url %>:<br />
		<%= f.text_field :url %>
  </p>
	<p>
		<%= f.label :content, 'Comment' %> :<br/>
		<%= f.text_area :content, :rows => 5, :cols => 50 %>
  </p>
  <p>
    <%= f.submit 'Add comment' %>
  </p>
<% end %>
