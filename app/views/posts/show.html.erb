<p>
  <b>Title:</b>
  <%=h @post.title %>
</p>

<p>
  <b>Content:</b>
  <%=h @post.content %>
</p>

<p>
  <b>Category:</b>
  <%=h @category.name %>
</p>

  <%= render :partial => "comment", :collection =>  @comments %>

<a id="comments"/>
<% form_for(@comment, :url => post_comments_path(@post) ) do |f| %>
  <p>
	<%= f.label :content %> :<br/>
	<%= f.text_area :content %>
  </p>
  <p>
	<%= f.label :author %> : 
	<%= f.text_field :author%><br/>
  </p>
  <p>
	<%= f.label :url %> : 
	<%= f.text_field :url %><br/>
  </p>
  <p>
    <%= f.submit 'Add comment' %>
  </p>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<%= render "link_to_new" %>