<p>
  <b>Title:</b>
  <%=h @post.title %>
</p>

<p>
  <b>Content:</b>
  <%=h @post.content %>
</p>

<p>
  <b>Category:</b>
  <%=h @category.name %>
</p>

  <%= render @comments %>

<a id="comments"></a>
<% form_for @comment, :url => post_comments_path(@post) do |f| %>
  <p>
		<%= f.label :author, 'Name' %>:<br />
		<%= f.text_field :author %>
  </p>
  <p>
		<%= f.label :url %>:<br />
		<%= f.text_field :url %>
  </p>
	<p>
		<%= f.label :content, 'Comment' %> :<br/>
		<%= f.text_area :content, :rows => 5, :cols => 50 %>
  </p>
  <p>
    <%= f.submit 'Add comment' %>
  </p>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<%= render "link_to_new" %>